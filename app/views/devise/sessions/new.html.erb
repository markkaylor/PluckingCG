<div class="container">
  <div class="row">
    <div class="col m6 offset-m3 center">
      <div class="card form-card">
        <h5>Log in</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render 'shared/devisemsg' %>

          <div class="input-field">
            <%= f.email_field :email, :class => "validate", :placeholder => "email" %>
          </div>

          <div class="input-field">
            <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "password" %>
          </div>

          <button class="btn btn-primary" type="submit" name="action">Log in</button>
          <%= link_to "Forgot password", new_user_password_path, :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="row">

  <div class="col m4">
    <div class="card z-depth-2">
      <div class="center">
        <h1>$<%= @course.price %></h1>
      </div>
      <div class="card-action center">
        <button class="btn waves-effect waves-light pink darken-2">
          Take this Course!
        </button>
      </div>
    </div>
  </div>

<div class="col m8">
  <div class="card z-depth-2">
    <div class="card-image">
      <%= image_tag @course.image %>
    </div>
    <div class="card-content grey-text darken-4">
      <h5><%= @course.name %></h5>
      <hr>
      <%= @course.content %>

      <div class="collection">
        <% @lessons.each do |lesson| %>
          <% if lesson.header %>
            <div class="collection-active">
              <i class="mdi-social-school"> <%= lesson.title %> </i>
            </div>
          <% else %>
            <%= link_to [lesson.course, lesson] do %>
              <%= lesson.note %>
            <% end %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>










</div>

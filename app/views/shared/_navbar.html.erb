<header>
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to "My Account", edit_user_registration_path %></li>
    <li><a href="#!">My Courses</a></li>
    <li class="divider"></li>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
  </ul>

  <ul id="dropdown2" class="dropdown-content">
    <li><%= link_to "My Account", edit_user_registration_path %></li>
    <li><a href="#!">My Courses</a></li>
    <li class="divider"></li>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
  </ul>

  <nav class="white">
    <div class="nav-wrapper">
      <div class="container">
      <a href="#!" class="brand-logo grey-text text-darken-3">PCG</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse grey-text text-darken-3"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><%= link_to "Courses", root_path, :class => "grey-text text-darken-3" %></li>
        <% if(!user_signed_in?) %>
          <li><%= link_to "Sign up", new_user_registration_path, :class => "grey-text text-darken-3" %></li>
          <li><%= link_to "Log in", new_user_session_path, :class => "grey-text text-darken-3" %></li>
        <% else %>
        <!-- Dropdown Trigger -->
          <li><a class="dropdown-button valign-wrapper grey-text text-darken-3" href="#!" data-activates="dropdown1">
            <%= avatar_url(current_user, 40) %>&nbsp;
            <%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a>
          </li>
        <% end %>
        </ul>

        <ul class="side-nav" id="mobile-demo">
          <li><a href="#">Courses</a></li>
          <% if(!user_signed_in?) %>
            <li><%= link_to "Sign up", new_user_registration_path, :class => "grey-text text-darken-3" %></li>
            <li><%= link_to "Log in", new_user_session_path, :class => "grey-text text-darken-3" %></li>
          <% else %>
          <!-- Dropdown Trigger -->
            <li><a class="dropdown-button valign-wrapper grey-text text-darken-3" href="#!" data-activates="dropdown2">
              <%= avatar_url(current_user, 40) %>&nbsp;
              <%= current_user.email %><i class="material-icons right">arrow_drop_down</i></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>



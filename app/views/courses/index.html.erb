<div class="banner" style="background-image: url(<%= asset_path 'PCG_banner.png' %>);">
  <div class="banner-content">
    <h1>I teach you to enjoy learning <br> so that you love playing</h1>
  </div>
</div>

<div class="container">

  <div class="row card z-depth-0">
    <% @courses.each do |course| %>
        <%= link_to course do %>
        <div class="col s12 m6" style="padding-left: 0;">
            <div class="card-image hoverable">
              <%= image_tag course.image %>
            </div>
        </div>
        <div class="col s12 m6 hoverable">
            <div class="card-content">
              <span class="card-title grey-text text-darken-4 ">
                 <%= course.name %>
               </span>
               <div class="overflow grey-text text-darken-4">
                 <%= course.content %>
               </div>
               <hr style ="width: 50px; height: 3px; margin-top: 50px; background-color: blue;">
              <span style="font-size: 40px">
                $<%= course.price %>
                </span>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="container" style="background-color: #454544; border-radius: 6px; margin-top: 5rem;">
  <div class="banner-content center">
    <h3>I teach you to enjoy learning <br> so that you love playing</h3>
  </div>
</div>


<div class="container">
  <% @courses.each do |course| %>


<div class="card z-depth-0">
      <div class="row" style="margin: 5rem 0 0 0 !important">
        <div class="col s12 m6" style="padding-left: 0;">
          <div class="card-image">
            <%= image_tag course.image %>
          </div>
        </div>
        <%= link_to course do %>
          <div class="col s12 m6">
            <div class="card-content hoverable">
              <span class="card-title grey-text text-darken-4 ">
                <%= course.name %>
              </span>
            <div class="overflow grey-text text-darken-4">
              <%= course.content %>
            </div>
            <hr style ="width: 50px; height: 3px; margin-top: 50px; background-color: blue;">
            <span style="font-size: 40px">
               $<%= course.price %>
            </span>
          </div>
        </div>
      </div>
      </div>

      <% end %>
    <% end %>
    </div>
</div>


